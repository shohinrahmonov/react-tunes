{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src"],
			"@lib/*": ["src/lib/*"],
			"@ui/*": ["src/components/ui/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@assets/*": ["src/assets/*"],
			"@hooks/*": ["src/hooks/*"],
			"@store/*": ["src/store/*"],
			"@models/*": ["src/models/*"],
		},
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true
	},
	"include": ["vite.config.ts"]
}
